{% import "../headline/template.njk" as seed_headline %}
{% import "../figure/template.njk" as figure %}

{% macro stacked2(
	card_classes,
	card_url,
	image,
	headline
) %}
	<div
		class="component component--card {{ card_classes }}"
	>
		<a
			href="{{ card_url }}"
			class="flex flex-wrap block"
			tabindex="-1"
		>
			{{ figure.figure(
					figure_classes=figure_classes+" card__image",
					image_src=image.image_src,
					image_params=image.image_params,
					image_alt=image.image_alt,
					image_figcaption=image.image_figcaption,
					image_srcset=image.image_srcset,
					image_sizes=image.image_sizes,
					image_classes=image.image_classes,
					image_width=image.image_width,
					image_height=image.image_height
				)
			}}
		</a>
		{{ seed_headline.headline(
				eyebrow_text=headline.eyebrow_text,
				eyebrow_classes=headline.eyebrow_classes,
				headline_classes=headline.headline_classes,
				heading_text=headline.heading_text,
				heading_size=headline.heading_size,
				heading_level=headline.heading_level,
				heading_classes=headline.heading_classes,
				heading_url=headline.heading_url,
				description_text=headline.description_text,
				description_classes=headline.description_classes,
				ctas=headline.ctas
			)
		}}
	</div>
{% endmacro %}


{% macro list(
	card_classes,
	card_url,
	image,
	headline
) %}
	<div
		class="component component--card {{ card_classes }} flex flex-wrap md:flex-nowrap"
	>
		{% if card_url %}
		<a
			href="{{ card_url }}"
			class="flex-shrink-0 object-none"
			tabindex="-1"
		>
		{% endif %}
			{{ figure.figure(
					figure_classes=image.figure_classes+" card__image flex-shrink-0 object-none",
					image_src=image.image_src,
					image_params=image.image_params,
					image_alt=image.image_alt,
					image_figcaption=image.image_figcaption,
					image_srcset=image.image_srcset,
					image_sizes=image.image_sizes,
					image_classes=image.image_classes,
					image_width=image.image_width,
					image_height=image.image_height
				)
			}}
		{% if card_url %}
		</a>
		{% endif %}
		{{ seed_headline.headline(
				eyebrow_text=headline.eyebrow_text,
				eyebrow_classes=headline.eyebrow_classes,
				headline_classes=headline.headline_classes,
				heading_text=headline.heading_text,
				heading_size=headline.heading_size,
				heading_level=headline.heading_level,
				heading_classes=headline.heading_classes,
				heading_url=headline.heading_url,
				description_text=headline.description_text,
				description_classes=headline.description_classes,
				ctas=headline.ctas
			)
		}}
	</div>
{% endmacro %}


{% macro stacked(title, link, image, excerpt) %}
	<div class="component component--card">
		<a href="{{ link }}" class="flex flex-wrap">
			<img src="{{ image }}&w=150&h=150&fit=crop" alt="" loading="lazy" class="flex-0" />
			<div class="w-5/6">
				<h2 class="text-2xl mb-2 text-blue-600">
					{{ title }}
				</h2>
				{{ excerpt }}
			</div>
		</a>
	</div>
{% endmacro %}