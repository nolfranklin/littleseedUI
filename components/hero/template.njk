{% import "../headline/template.njk" as headline %}
{% import "../figure/template.njk" as figure %}

{% macro hero(
	image_src,
	image_params,
	image_alt,
	image_figcaption,
	image_srcset,
	image_sizes,
	image_classes,
	headline_classes,
	headline_container,
	heading_text,
	heading_size,
	heading_level,
	heading_classes,
	description_text,
	description_classes,
	ctas
) %}

	{% set img1 = "https://images.unsplash.com/photo-1550948390-6eb7fa773072?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format" %}

	<div class="component component--hero">
		<div class="container mx-auto">
		<div class="md:grid grid-cols-2 flex flex-wrap lg:items-center">
			{{ figure.figure(
					image_src=image_src,
					image_params=image_params,
					image_alt=image_alt,
					image_figcaption=image_figcaption,
					image_srcset=image_srcset,
					image_sizes=image_sizes,
					image_classes=image_classes
				)
			}}
			{{ headline.headline(
					headline_classes=headline_classes,
					heading_text=heading_text,
					heading_size=heading_size,
					heading_level=heading_level,
					heading_classes=heading_classes,
					description_text=description_text,
					description_classes=description_classes,
					ctas=ctas
				)
			}}
		</div>
		</div>
	</div>
{% endmacro %}