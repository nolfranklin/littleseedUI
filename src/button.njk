---
layout: layouts/base.njk
title: Buttons
---
{% import "../components/button/template.njk" as button %}

<h2 class="text-3xl mb-3">
	Sizes
</h2>
<p class="mb-10">
	Note: Remember to create button size and variation classes in Tailwind.
</p>

{{ button.button(
		button_text='Button Large',
		button_url='https://google.ca/',
		button_size="lg",
		button_display="inline-block",
		button_classes="text-lg mr-2 py-4 px-6 bg-indigo-800 border-indigo-800 hover:bg-indigo-700 text-white rounded"
	)
}}

{{ button.button(
		button_text='Button Medium',
		button_url='https://google.ca/',
		button_size="md",
		button_display="inline-block",
		button_classes="mr-2 py-3 px-4 bg-indigo-800 border-indigo-800 hover:bg-indigo-700 text-white rounded"
	)
}}

{{ button.button(
		button_text='Button Small',
		button_url='https://google.ca/',
		button_size="sm",
		button_display="inline-block",
		button_classes="mr-2 py-2 px-3 bg-indigo-800 border-indigo-800 hover:bg-indigo-700 text-white rounded"
	)
}}

{{ button.button(
		button_text='Button No Size',
		button_url='https://google.ca/',
		button_display="inline-block",
		button_classes="px-2 py-1 text-xs bg-indigo-800 border-indigo-800 hover:bg-indigo-700 text-white rounded"
	)
}}

<h2 class="text-3xl my-10">
	Variations
</h2>

{{ button.button(
		button_text='Primary Button',
		button_url='https://google.ca/',
		button_size="lg",
		button_variation="primary",
		button_display="inline-block",
		button_classes="text-lg mr-2 py-4 px-6 bg-indigo-800 border border-indigo-800 hover:bg-indigo-700 text-white rounded"
	)
}}

{{ button.button(
		button_text='Secondary Button',
		button_url='https://google.ca/',
		button_size="lg",
		button_variation="secondary",
		button_display="inline-block",
		button_classes="text-lg mr-2 py-4 px-6 bg-green-800 border border-green-800 hover:bg-green-700 text-white rounded"
	)
}}

{{ button.button(
		button_text='Outline Button',
		button_url='https://google.ca/',
		button_size="lg",
		button_variation="outline",
		button_display="inline-block",
		button_classes="text-lg mr-2 py-4 px-6 bg-white border border-indigo-800 text-indigo-800 rounded"
	)
}}